ctrl + alt - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"

ctrl + alt - c : yabai -m space --create
ctrl + alt - d : yabai -m space --destroy

ctrl + alt - e : yabai -m space --layout bsp
ctrl + alt - s : yabai -m space --layout stack

ctrl + alt - a : yabai -m space --balance

ctrl + alt - h : yabai -m window --focus west
ctrl + alt - j : yabai -m window --focus south
ctrl + alt - k : yabai -m window --focus north
ctrl + alt - l : yabai -m window --focus east

ctrl + alt + shift - h : yabai -m window --swap west
ctrl + alt + shift - j : yabai -m window --swap south
ctrl + alt + shift - k : yabai -m window --swap north
ctrl + alt + shift - l : yabai -m window --swap east

ctrl + shift - h : yabai -m window --warp west
ctrl + shift - j : yabai -m window --warp south
ctrl + shift - k : yabai -m window --warp north
ctrl + shift - l : yabai -m window --warp east

alt + shift - h : yabai -m window --stack west
alt + shift - j : yabai -m window --stack south
alt + shift - k : yabai -m window --stack north
alt + shift - l : yabai -m window --stack east

ctrl + alt + shift - h : yabai -m window --swap west
ctrl + alt + shift - j : yabai -m window --swap south
ctrl + alt + shift - k : yabai -m window --swap north
ctrl + alt + shift - l : yabai -m window --swap east

ctrl + alt - tab : yabai -m window --focus recent

ctrl + alt - n : yabai -m window --focus stack.next 
ctrl + alt - p : yabai -m window --focus stack.prev 

ctrl + alt - 1 : yabai -m space --focus 1
ctrl + alt - 2 : yabai -m space --focus 2
ctrl + alt - 3 : yabai -m space --focus 3
ctrl + alt - 4 : yabai -m space --focus 4
ctrl + alt - 5 : yabai -m space --focus 5
ctrl + alt - 6 : yabai -m space --focus 6
ctrl + alt - 7 : yabai -m space --focus 7
ctrl + alt - 8 : yabai -m space --focus 8
ctrl + alt - 9 : yabai -m space --focus 9
ctrl + alt - 0 : yabai -m space --focus 0

ctrl + alt + shift - 1 : yabai -m window --space 1
ctrl + alt + shift - 2 : yabai -m window --space 2
ctrl + alt + shift - 3 : yabai -m window --space 3
ctrl + alt + shift - 4 : yabai -m window --space 4
ctrl + alt + shift - 5 : yabai -m window --space 5
ctrl + alt + shift - 6 : yabai -m window --space 6
ctrl + alt + shift - 7 : yabai -m window --space 7
ctrl + alt + shift - 8 : yabai -m window --space 8
ctrl + alt + shift - 9 : yabai -m window --space 9
ctrl + alt + shift - 0 : yabai -m window --space 0

cmd + ctrl + alt - f : yabai -m window --toggle zoom-fullscreen
ctrl + alt - f : yabai -m window --toggle float

ctrl + alt - v : yabai -m window --toggle split

cmd + ctrl + alt - h : yabai -m window --resize right:-20:0
cmd + ctrl + alt - j : yabai -m window --resize bottom:0:20
cmd + ctrl + alt - k : yabai -m window --resize bottom:0:-20
cmd + ctrl + alt - l : yabai -m window --resize right:20:0
